<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
      <h2>管理者ログイン</h2>
    </div>

    <br />
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group row">
            <div class="col-lg-4"><%= f.label :email, "メールアドレス",:size => "50*50" %></div>
            <div class="col-lg-8"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-lg-12" %></div>
          </div>

          <div class="field form-group row">
            <div class="col-lg-4"><%= f.label :password, "パスワード",:size => "50*50" %></div>
            <div class="col-lg-8"><%= f.password_field :password, autocomplete: "urrent-password",class: "col-lg-12" %></div>
          </div>

          <div class="actions row">
            <%= f.submit "ログイン", class: "offset-md-4" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>
    </div>
  </div>
</div>


