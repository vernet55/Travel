<br/>
<div class="container">
  <div class="inner">
    <h3>会員一覧</h3>

      <div class="row">
        <div class="col-8 mx-auto">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>会員ID</th>
                <th>ユーザー名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
              <% @customers.each do |customer| %>
                <tbody>
                  <tr>
                    <td><%= customer.id %></td>
                    <td><%= link_to admin_show_customer_path(customer.id) do %>
                          <%= customer.name %>
                        <% end %>
                    </td>
                    <td><%= customer.email %></td>
                    <td><% if customer.is_deleted ==true %><font color="red">退会</font>
                        <% else %>有効 <% end %></td>
                  </tr>
                </tbody>
              <% end %>
          </table>
        </div>
      </div>
  </div>
</div>