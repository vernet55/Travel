<div class="container">
  <div class="col-md-12">
    </br>
    <h3 class="inner"><%= @customer.name %>さんの会員詳細ページ</h3>
  </div>

    </br>
    <table>
      <tr>
        <th>◆登録情報　　</th>
        <th><%= link_to "編集する",admin_edit_customer_path, class: "btn btn-success" %></th>
      </tr>
    </table>

      </br>
      <table border="1" width="70%" height="200">
        <tr>
          <th width="10%" bgcolor="#DDDDDD">会員ID</th>
          <td width="40%"><%= @customer.id %></td>
        </tr>

        <tr>
          <th width="10%" bgcolor="#DDDDDD">ユーザー名</th>
          <td width="40%"><%= @customer.name %></td>
        </tr>

        <tr>
          <th width="10%" bgcolor="#DDDDDD">メールアドレス</th>
          <td width="40%"><%= @customer.email %></td>
        </tr>

        <tr>
          <th width="10%" bgcolor="#DDDDDD">会員ステータス</th>
          <td width="40%"><% if @customer.is_deleted %>退会
              <% else %>有効 <% end %></td>
        </tr>
      </table>

        <br/>
        <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>タイトル</th>
                    <th>本文</th>
                    <th>機能</th>
                  </tr>
                </thead>

　　　　　　　<tbody>
                <% @posts.each do |post| %>
                    <tr>
                      <td>
                        <%= link_to public_post_path(post.id) do %>
                          <% if post.image.attached? %>
                              <%= image_tag post.image, size: "100x100" %>
                          <% else %>
                              <%= image_tag 'no_image', size: "100x100" %>
                          <% end %>
                        <% end %>
                      </td>
                      <td><%= post.title %></td>
                      <td><%= post.body %></td>
                      <td><%= link_to "削除", admin_destroy_customer_path(@customer, post_id: post.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger"%></td> 
                    </tr>
                <% end %>
              </tbody>
              </table>
  </div>
</div>
