<!DOCTYPE html>
<html>
  <head>
    <title>Travel Assistance</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="position: relative; min-height: 100vh;">
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <%= link_to "", root_path, class: "navbar__brand navbar__mainLogo" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-md-auto align-items-center">
          </ul>
        </div>
      </div>
    </nav>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <%= link_to "Travel Assistance", root_path,class:"navbar-brand nav-link text-light" %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <div class="social"></div>
              <% if customer_signed_in? %>
                <li>
                  <%= link_to "ホーム", public_posts_path, class:"nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "マイページ", public_customers_my_page_path, class:"nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "投稿", public_posts_path, class: "nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link text-light"  %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path,  method: :delete , class:"btn btn-Light" %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_customer_registration_path, class: "nav-link text-light" do %>
                  <i class="fas fa-user-plus"></i>新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class:"nav-link text-light" do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <nav class="navbar navbar-light" style="background-color: #e3f2fd; position: absolute; bottom: 0; width: 100%;">
        <div class="mx-auto">
          <p>Travel Assistance</p>
        </div>
      </nav>
    </footer>
  </body>
</html>

