<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>≪投稿内容編集≫</h2>

          <% if @post.errors.any? %>
            <%= @post.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @post, url: public_post_path, method: :patch do |f| %>
          
            <br/>
            <div class="form-group">
              <label>◆画像</label>
              </br>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
          
            <div class="form-group">
              <label>◆Title</label>
              </br>
              <%= f.text_field :title %>
            </div>

            <div class="form-group">
              <label>◆本文</label>
              </br>
              <%= f.text_area :body %>
            </div>

            <div class="form-group">
              </br>
              <%= f.submit '更新',class:"btn btn-success" %>
            </div>
          <% end %>
    </div>
  </div>
</div>
