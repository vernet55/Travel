<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>

      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @customer, url: public_update_customer_path, method: :patch do |f| %>
        <div class="form-group">
           <label for="user_name">ユーザーネーム</label>
             </br>
             <%= f.text_field :name %>
         </div>

         <div class="form-group">
           <label for="user_name">コメント</label>
             </br>
             <%= f.text_field :comment,:size => "50*50" %>
         </div>


         <div class="form-group">
           </br>
           <label for="user_image">画像</label>
             </br>
             <%= f.file_field :profile_image, accept: "image/*" %>
         </div>

         <div class="form-group">
             </br>
             <%= f.submit '更新',class:"btn btn-success" %>
         </div>
      <% end %>
    </div>
  </div>
</div>
