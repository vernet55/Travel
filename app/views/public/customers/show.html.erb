<div class="container px-5 px-sm-0 pb-5">
    <div class="row">
        <div class="col-md-3">
          <h2>マイページ</h2>
          <br/>
          <%= image_tag @customer.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>ユーザーネーム</th>
                <th><%= @customer.name %><th>
              </tr>
            　<tr>
                <th>コメント</th>
                <th><%= @customer.comment %><th>
              </tr>

            </tbody>
          </table>

           <div class="row">
             <%= link_to public_edit_customer_path(@customer.id), class:"btn btn-outline-secondary btn-block"  do %>
               <i class="fas fa-user-cog"></i>
             <% end %>
           </div>
        </div>

        <div class="col-md-8 offset-md-1">
            <br/>
            <h5>投稿一覧</h5>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>タイトル</th>
                    <th>本文</th>
                    <th></th>
                  </tr>
                </thead>

　　　　　　　<tbody>
                <% @posts.each do |post| %>

                    <tr>
                      <td>
                        <%= link_to public_post_path(post.id) do %>
                          <% if post.image.attached? %>
                              <%= image_tag post.image, size: "100x100" %>
                          <% else %>
                              <%= image_tag 'no_image', size: "100x100" %>
                          <% end %>
                        <% end %>
                      </td>
                      <td><%= post.title %></td>
                      <td><%= post.body %></td>
                    </tr>
                <% end %>
              </tbody>
              </table>
        </div>
    </div>
</div>

